<Window x:Class="lab24_gaming_interface.PongGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab24_gaming_interface"
        mc:Ignorable="d"
        Title="PongGame" Height="450" Width="800" KeyDown="P1KeyPress" >
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>

        <Label x:Name="Player1" Content="P1"  Width="20" Height="100" Background="Blue" Grid.Column="1" Margin="10.4,116.8,631.2,139.8" Grid.Row="1" />
        <Label x:Name="Player2" Content="P2" Width="20" Height="100" Background="Red" Grid.Column="1" Margin="631.4,128.8,10.2,152.8" Grid.Row="1" />
        <Image x:Name="Ball" Margin="311.4,180.8,332.2,182.8" Source="Image3.png" Stretch="Fill" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
